{
  "name": "meta-controller",
  "version": "1.0.0",
  "description": "meta-controller",
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "module": "./esm/index.js",
      "import": "./esm/index.js",
      "require": "./cjs/index.js"
    }
  },
  "main": "./cjs/index.js",
  "types": "./types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf ./build",
    "lint": "eslint --config .eslintrc.cjs ./src ./test",
    "test": "cross-env-shell TS_NODE_TRANSPILE_ONLY=true tap",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --project tsconfig-release.json --module commonjs --target es5 --outDir build/cjs",
    "build:esm": "tsc --project tsconfig-release.json --module nodenext --target es2022 --outDir build/esm",
    "copy": "cpy ./package.json ./README.md ./LICENSE.md ./build",
    "postversion": "git push && git push --tags",
    "release": "npm run lint && npm run test && npm run build && npm version major && npm run copy && npm publish ./build"
  },
  "tap": {
    "reporter": "terse",
    "node-arg": [
      "--loader=ts-node/esm",
      "--no-warnings"
    ],
    "coverage": false,
    "bail": true,
    "only": false,
    "jobs": 1
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rmuchall/meta-controller.git"
  },
  "keywords": [
    "rest"
  ],
  "author": "Rob Muchall <rmuchall@protonmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rmuchall/meta-controller/issues"
  },
  "homepage": "https://github.com/rmuchall/meta-controller#readme",
  "devDependencies": {
    "@types/cors": "2.8.12",
    "@types/express": "4.17.14",
    "@types/node": "18.11.9",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "cpy-cli": "4.2.0",
    "cross-env": "7.0.3",
    "eslint": "8.26.0",
    "rimraf": "3.0.2",
    "tap": "^16.3.0",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.18.2",
    "http-status-ts": "2.0.0",
    "meta-transformer": "2.0.0",
    "meta-validator": "2.0.0",
    "reflect-metadata": "0.1.13"
  }
}
