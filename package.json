{
  "name": "meta-controller",
  "version": "1.0.0",
  "description": "meta-controller",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf ./build",
    "lint": "eslint --config .eslintrc.js ./src ./test",
    "test": "jest --coverage --runInBand",
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:es2020",
    "build:cjs": "tsc --project tsconfig-release.json --module commonjs --target es5 --outDir build/cjs",
    "build:esm": "tsc --project tsconfig-release.json --module es2020 --target es5 --outDir build/esm",
    "build:es2020": "tsc --project tsconfig-release.json --module es2020 --target es2020 --outDir build/es2020",
    "copy": "cpy ./package.json ./README.md ./LICENSE.md ./build",
    "postversion": "git push && git push --tags",
    "release": "npm run lint && npm run test && npm run build && npm version patch && npm run copy && npm publish ./build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rmuchall/meta-controller.git"
  },
  "keywords": [
    "rest"
  ],
  "author": "Rob Muchall <rmuchall@protonmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rmuchall/meta-controller/issues"
  },
  "homepage": "https://github.com/rmuchall/meta-controller#readme",
  "devDependencies": {
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "27.5.0",
    "@types/node": "17.0.31",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "cpy-cli": "4.1.0",
    "eslint": "8.15.0",
    "jest": "28.1.0",
    "node-fetch": "3.0.0-beta.9",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.1",
    "ts-node": "10.7.0",
    "typescript": "4.6.4"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.18.1",
    "http-status-ts": "1.0.0",
    "meta-transformer": "1.0.0",
    "meta-validator": "1.0.0",
    "reflect-metadata": "0.1.13"
  }
}
